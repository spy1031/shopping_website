<div class="container">
  <div class="row">
    <div class="col-md-9">
      <% @products.each do |product|%>
        <div class="col-md-1" style="width:20%">
          <div class="product-item clearfix">
            <%=image_tag product.image %>
            <div class="item-text">
              <h5><%= product.name %></h5>
              <div class="product-description">
                <%= truncate(product.description, length: 40 )%>
              </div>
              
              <h5>$<%= product.price %></h5>
              <%= link_to "Delete" ,admin_products_path(id: product.id),method: :delete ,data:{confirm:"Are you sure>"} ,class: "btn btn-danger"%>
            </div>
              
          </div>
        </div>  
      <% end %>
    </div>
    <div class="col-md-3">
      <h3 class="text-center">New</h3>
      <hr>
      <%= form_for [:admin,@product] do |f| %>
        <div class="form-group">
          <%= f.label :name,"Name" %>
          <%= f.text_field :name ,{class: "form-control"}%>
       
          <%= f.label :description,"description" %>
          <%= f.text_area :description ,{class: "form-control"}%>
       
          <%= f.label :price,"Price" %>
          <%= f.text_field :price,{class: "form-control"} %>
      
          <%= f.label :image, "Photo" %>
          <%= image_tag @product.image, width: '300px' if @product.image? %>
          <%= f.file_field :image %>

          <%= f.submit class: "btn btn-success" %>
        </div>


      <% end %>
    </div>
      
  </div>
  <div class="text-center">
     <%= paginate @products %>
  </div>
 
</div>